{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "pip install -r backend/requirements_production.txt"
  },
  "deploy": {
    "startCommand": "cd backend && python server_production.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "RAILWAY_STATIC_URL": "https://siports-api.up.railway.app",
        "DATABASE_URL": "instance/siports_production.db",
        "JWT_SECRET_KEY": "${{ secrets.JWT_SECRET_KEY }}"
      }
    }
  }
}