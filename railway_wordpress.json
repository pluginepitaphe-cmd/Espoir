{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "pip install -r backend/requirements_production_wp.txt"
  },
  "deploy": {
    "startCommand": "cd backend && python server_production_wp.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "RAILWAY_STATIC_URL": "https://siports-api.up.railway.app",
        "DATABASE_URL": "instance/siports_production.db",
        "JWT_SECRET_KEY": "${{ secrets.JWT_SECRET_KEY }}",
        "WORDPRESS_ENABLED": "true",
        "WP_DB_HOST": "${{ secrets.WP_DB_HOST }}",
        "WP_DB_NAME": "${{ secrets.WP_DB_NAME }}",
        "WP_DB_USER": "${{ secrets.WP_DB_USER }}",
        "WP_DB_PASSWORD": "${{ secrets.WP_DB_PASSWORD }}",
        "WP_DB_PORT": "3306",
        "WP_TABLE_PREFIX": "wp_",
        "WP_SITE_URL": "https://siportevent.com",
        "WP_ADMIN_EMAIL": "admin@siportevent.com",
        "WP_JWT_SECRET": "${{ secrets.WP_JWT_SECRET }}"
      }
    }
  }
}